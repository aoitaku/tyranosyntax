{
    "name": "tyranosyntax",
    "displayName": "TyranoScript syntax",
    "description": "Provides TyranoScript Adventure Game syntax for Visual Studio Code",
	"publisher": "orukred-tyranosyntax",
    "version": "0.0.2",

    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "tyrano",
            "aliases": ["tyranoscript", "tyrano"],
            "extensions": [".ks"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "tyrano",
            "scopeName": "source.ks",
            "path": "./syntaxes/tyrano.tmLanguage.json"
        }],
		"snippets": [{
			"language": "tyrano",
			"scopeName":"source.ks",
			"path": "./snippet/tyrano.snippet.json"
		},
		{
			"language": "javascript",
			"scopeName":"source.ks",
			"path": "./snippet/javascript.snippet.json"
			
		}
	]
    },
	"configurationDefaults": {
		"javascript": {
		  "editor.semanticHighlighting.enabled": true
		},
		"tyrano": {
			"editor.semanticHighlighting.enabled": true
		  }
	}
}